{
  "name": "react-selectronic",
  "version": "1.0.0",
  "main": "dist/react-selectronic.cjs.js",
  "module": "dist/react-selectronic.esm.js",
  "browser": "dist/react-selectronic.umd.js",
  "scripts": {
    "start": "node script/develop.js",
    "buildDemo": "NODE_ENV=production node script/buildDemo.js",
    "build": "rollup --config config/rollup.prod.config.js --environment NODE_ENV:production",
    "lint": "eslint ./",
    "test": "jest --no-cache",
    "precommit": "lint-staged"
  },
  "repository": {
    "url": "git@github.com:WendellLiu/react-selectronic.git",
    "type": "git"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "author": "Wendell Liu <cuk.bas@gmail.com>",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.yarn-cache/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.6.1",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.0",
    "prop-types": "^15.6.x",
    "react": "^16.2.x",
    "react-dom": "^16.2.x",
    "rollup": "^0.55.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-postcss": "^1.2.8",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "serve": "^6.4.9",
    "styled-components": "^3.1.6"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0"
  }
}
